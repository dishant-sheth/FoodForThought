<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardUseCompatPadding="true"
    card_view:cardCornerRadius="4dp"
    card_view:elevation="7dp">
<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ingreDetailsLayout"
        android:orientation="horizontal">

    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/ingreImage" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:textSize="22sp"
        android:text="Sample"
        android:textColor="#000000"
        android:layout_gravity="center_vertical"
        android:id="@+id/ingreName"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#d0d0d0"
                android:layout_marginTop="9dp"/>

            <ImageButton
        android:layout_width="wrap_content"
                android:src="@drawable/ic_action_down"
        android:background="@null"
        android:layout_gravity="end"
        android:id="@+id/extend_button"
                android:layout_height="25dp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@null"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/ingreInfo"
        android:background="#a793e5"
        android:text="Ingredient info here"
        android:textColor="#000000"
        android:textSize="15sp"
        android:visibility="visible"
        android:padding="10dp"/>

</LinearLayout>

</android.support.v7.widget.CardView>